ESA_SSH_AGENT_TIMEOUT=${ESA_SSH_AGENT_TIMEOUT:-}
set -euf -o pipefail

# Global variables
ESA_SSH_AGENT_PIDFILE="$HOME/.esa-ssh-agent.pid"
SSH_DIR="$HOME/.ssh"
[[ "$ESA_SSH_AGENT_TIMEOUT" = "" ]] && ESA_SSH_AGENT_TIMEOUT=$((3600 * 12))

# Dynamic variables
# -t = the identities lifetime in seconds (default is forever)
ESA_SSH_AGENT_ARGS=(-t "$ESA_SSH_AGENT_TIMEOUT")

# shellcheck disable=SC2317
error_handler() {
  local errno="$?"
  msg "Error: ${BASH_SOURCE[1]}:${BASH_LINENO[0]}" \
    "(${BASH_COMMAND} exited with status $errno)" >&2
  exit "${errno}"
}
trap "error_handler" ERR
set -o errtrace

secure-pidfile() {
  local dir
  dir=$(dirname "$ESA_SSH_AGENT_PIDFILE")
  mkdir -p "$dir"
  touch "${ESA_SSH_AGENT_PIDFILE}"
  if [[ -f "$ESA_SSH_AGENT_PIDFILE" ]]; then
    chmod 600 "$ESA_SSH_AGENT_PIDFILE"
  fi
}

load-ssh-agent-pidfile() {
  secure-pidfile
  if [[ -f "${ESA_SSH_AGENT_PIDFILE}" ]] \
    && grep -q SSH_AUTH_SOCK -- "$ESA_SSH_AGENT_PIDFILE"; then
    # shellcheck disable=SC1090
    source "${ESA_SSH_AGENT_PIDFILE}" || return 1
  fi
}

# TODO: Make this ensure the PID is an ssh-agent.
# kill-ssh-agent() {
#   if [[ -f "$ESA_SSH_AGENT_PIDFILE" ]]; then
#     source "$ESA_SSH_AGENT_PIDFILE" >/dev/null 2>&1 || return
#     if [[ -n "${SSH_AGENT_PID:-}" ]]; then
#       kill "$SSH_AGENT_PID" >/dev/null 2>&1 || true
#     fi
#   fi
# }

kill-ssh-agent() {
  killall -u "$USER" ssh-agent >/dev/null 2>&1 || true
}

msg() {
  local cmd
  cmd=$(basename "$0")
  printf "$cmd: %s\n" "$*"
}

reload-ssh-agent() {
  local errno=0
  # TODO: Is this necessary?
  kill-ssh-agent
  secure-pidfile

  (
    echo "# esa"
    ssh-agent "${ESA_SSH_AGENT_ARGS[@]}" \
      | grep -E '(SSH_AUTH_SOCK|SSH_AGENT_PID)'
  ) >"${ESA_SSH_AGENT_PIDFILE}" || errno="$?"

  if [[ $errno -ne 0 ]]; then
    return 1
  fi

  load-ssh-agent-pidfile
}

esa-start() {
  local item
  local errno=0

  load-ssh-agent-pidfile

  ssh-add -l >/dev/null 2>&1 || errno="$?"
  if [ "$errno" -eq "2" ]; then
    # errno=2 when ssh-add is unable to contact the authentication agent
    reload-ssh-agent
  elif [ "$errno" -ne "0" ] && [ "$errno" -ne "1" ]; then
    msg "Error: 'ssh-add -l' returned $errno." >&2
    return 1
  fi

  # Output
  # echo "SSH_AUTH_SOCK=$SSH_AUTH_SOCK"
  # echo "SSH_AGENT_PID=$SSH_AGENT_PID"
}

esa-stop() {
  kill-ssh-agent
  echo >"$ESA_SSH_AGENT_PIDFILE"
  secure-pidfile
}

esa-ssh-add() {
  for item in ssh-add expect; do
    if ! type -P "$item" >/dev/null 2>&1; then
      msg "No '$item' in ($PATH)" >&2
      return 1
    fi
  done

  if ! [[ -d "$SSH_DIR" ]]; then
    msg "Error: The directory does not exist: $SSH_DIR" >&2
    exit 1
  fi

  LIST_SSH_KEY_FILES=()
  while IFS= read -r file; do
    LIST_SSH_KEY_FILES+=("$file")
  done < <(grep -lR --no-messages -- "BEGIN .*PRIVATE KEY" "$SSH_DIR")

  local ssh_password=""
  for PRIVATE_KEY_FILE in "${LIST_SSH_KEY_FILES[@]}"; do
    FINGERPRINT=$(ssh-keygen -lf "$PRIVATE_KEY_FILE" | awk '{print $2}')

    if ! ssh-add -l 2>/dev/null | awk '{print $2}' \
      | grep -Fxq -- "$FINGERPRINT"; then
      if [[ $ssh_password = "" ]]; then
        read -r -p "SSH key password for $PRIVATE_KEY_FILE: " -s ssh_password
        echo
      fi

      # 2>&1
      E_PRIVATE_KEY_FILE="$PRIVATE_KEY_FILE" \
        E_ssh_password="$ssh_password" \
        LC_ALL=C expect >/dev/null <<EOF
set timeout 10
spawn ssh-add "\$env(E_PRIVATE_KEY_FILE)"
expect "passphrase"
send "\$env(E_ssh_password)\r"
expect eof
EOF
    fi
  done
}

main() {
  if [[ $# -eq 0 ]]; then
    {
      echo "Usage: $0 <start|add|exec>"
      echo
      echo "start: Starts the ssh agent"
      echo "stop: Stops the ssh agent"
      echo "add: Adds private keys requiring a password with ssh-add"
      echo "exec: Executes a program using this agent"
      echo "env: Displays the ssh-agent environment variables"
    } >&2
    exit 1
  fi

  for item in killall chmod grep; do
    if ! type -P "$item" >/dev/null 2>&1; then
      msg "no '$item' in ($PATH)" >&2
      return 1
    fi
  done

  case "$1" in
  start)
    esa-start
    msg "Started."
    ;;

  stop)
    esa-stop
    msg "Stopped."
    ;;

  ssh-add)
    esa-start
    esa-ssh-add
    msg "Success."
    ;;

  exec | ssh-add-exec)
    esa-start
    if [[ $1 = "ssh-add-exec" ]]; then
      esa-ssh-add
    fi
    shift
    if [[ $# -eq 0 ]]; then
      msg "Error: You need to specify the command to execute" >&2
      exit 1
    fi

    if ! type -P "$1" &>/dev/null; then
      msg "Error: Command not found: $1" >&2
      exit 1
    fi

    "$@" || exit 1
    exit 0
    ;;

  env)
    if [[ -f "$ESA_SSH_AGENT_PIDFILE" ]]; then
      cat "$ESA_SSH_AGENT_PIDFILE"
    else
      msg "Error: No such file or directory: $ESA_SSH_AGENT_PIDFILE" >&2
      exit 1
    fi
    ;;
  *)
    msg "Error: Unsupported command: $1" >&2
    exit 1
    ;;
  esac
}

main "$@"
